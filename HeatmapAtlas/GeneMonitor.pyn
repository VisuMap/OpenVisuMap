		y0 += 120

def InfoFromStr(desc):
	if desc == None: 
		return {}
	info = {}
	for s in desc.split(';'):
		fs = s.strip().split(':', 1)
		if len(fs) < 2: 
			continue
		info[fs[0]] = fs[1]
	return info

def InfoToStr(info):
	return ';'.join([f'{key}:{info[key]}' for key in info])

