def MakeLabel(nt, geneList): 
	id2index = {id:k for k, id in enumerate(geneList)}
	vs = [item.Value for item in nt.ColumnMean()]
	largeV = ThresholdHi(vs)
	if largeV == 0:
		return nullName
	nm = ''
	for k, v in enumerate(vs):
		if v > largeV:	
			nm += dKeys.Lookup(nt.ColumnSpecList[k].Id)
	if len(nm) == 0: 
		nm = nullName
	return nm

