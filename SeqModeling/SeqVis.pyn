def AugmentData(N, augCfg='a|500|2.0|2.0'):
	fs = augCfg.split('|')
	spanCount = int(fs[1])
	spanSize = float(fs[2])
	spanScale = float(fs[3])
	A = np.zeros((N, 3), np.float32 )
	a = 2.0*math.pi/spanCount
	sX = spanSize/spanCount
	for n in range(N):
		A[n] = math.sin(n*a), math.cos(n*a), n*sX
	return spanScale*A

def NewDataset(S, winSize=0, stretchFactor=1.0, alphbetList=ALPHABET, augCfg='a|500|2.0|2.0'):
	P = {a:k for k,a in enumerate(alphbetList)}
	S = FilterSeq(S, P)
	if winSize == 0: winSize = max(5, int(6.086 + 0.015652*len(S)))
	ww = [1.0 - k/winSize for k in range(winSize)]  # window weights
	W, L, dimP = len(ww), len(S), len(P)

	augData = AugmentData(L, augCfg)
	dt = np.zeros([len(S), dimP+augData.shape[1]], np.float32)
	dt[:, dimP:] = augData

	for row, c in enumerate(S):
		col0 = P[c]
		W0 = -W+1  # symmetric window
		#W0 = -5
		for w in range(W0, W):
			row_w = row + w
			if row_w < 0 or row_w >= L:
				continue
			col = P[S[row_w]]
			dt[row, col] += ww[abs(w)]	
	nt = mm.ToTable(dt)
	for k, c in enumerate(S):
		nt.RowSpecList[k].Name = c
		nt.RowSpecList[k].Type = P[c]
	for col in range(dimP):
		nt.ColumnSpecList[col].Id = alphbetList[col]
	return nt

def NewMds(nt, epochs=10000, is3D=False, initExag=10.0, finalExag=1.0):
	mds = New.MdsCluster(nt)
	mds.Show()
	mds.MaxLoops = epochs
	mds.RefreshFreq = 500
	mds.InitialExaggeration = initExag
	mds.FinalExaggeration = finalExag
	mds.PerplexityRatio = 0.05
	mds.Metric = 'EuclideanMetric'
	mds.Repeats = 1
	mds.ReadOnly = True
	mds.Is3D = is3D
	mds.AutoNormalizing =True
	mds.GlyphSet = '36 Clusters'
	return mds

def RunMds(mds, repeats=1, glyphSize=0.8, glyphOpacity=0.5):
	mds.Repeats = repeats
	mds.Reset().Start()
	if mds.Repeats == 1:
		if mds.Is3D:
			mp = mds.Show3DView()
			mp.NormalizeView()
		else:
			mp = mds.Show2DView()
	else:
		mp = vv.LastView
	mp.GlyphOpacity = glyphOpacity
	mp.GlyphSize = glyphSize
	mp.Redraw()
	return mds

