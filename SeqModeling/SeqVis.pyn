	pTable = GetProteinTable()
	pSeq = GetProteinSeq(pTable, info.pId)
	nt = NewDataset(pSeq, winSize=int(info.WinSize), stretchFactor=float(info.SFactor))
	nt.ShowHeatMap().NormalizeView()

def CreateMaps(pList, epochs, winSize, repeats, saveTo, glyphSize, glyphOpacity, is3D, initExag, finalExag, augCfg='a|500|2.0|2.0'):
	if len(pList) <= 0:
		vv.Message("No protein group selected")
		vv.Return(0)
	pTable = GetProteinTable()
	mds = NewMds(None, epochs=epochs, is3D=is3D, initExag=initExag, finalExag=finalExag)
	info = MapInfo()
	info.Epochs = epochs
	info.InitE = initExag
	info.FinalE = finalExag
	info.PP = mds.PerplexityRatio
	info.WinSize = winSize	
	info.Is3D = is3D
	info.AugCfg = augCfg
	for k, pId in enumerate(pList):
		pSeq = GetProteinSeq(pTable, pId)
		nt = NewDataset(pSeq, winSize=winSize, augCfg=augCfg)
		mds.SetTrainingData(nt)
		RunMds(mds, repeats=repeats, glyphSize=glyphSize, glyphOpacity=glyphOpacity)
		info.pId = pId
		info.pLen = len(pSeq)
		map = vv.LastView
		map.Title = f'{k}: {pId}, N: {nt.Rows}'
		map.Description = info.ToStr()
		if (k+1)%8 == 0:
			SaveToAtlas(saveTo, is3D)
	mds.Close()
	SaveToAtlas(saveTo, is3D)

def CreateOneMap(pSeq, epochs=10000, winSize=0, repeats=1, 
		saveTo=None, glyphSize=0.8, glyphOpacity=0.5, is3D=True, initExag=10.0, finalExag=1.0,  augCfg='a|500|2.0|2.0'):
	nt = NewDataset(pSeq, winSize=winSize, augCfg=augCfg)
	mds = NewMds(nt, epochs=epochs, is3D=is3D, initExag=initExag, finalExag=finalExag)
	mds.Reset().Start()

def Scanning(pMap):
	K = 100
	bsList = [b.Id for b in pMap.BodyList]
	for pause in [50, 150]:
		for k in range(0, len(bsList), 10):
			vv.SelectedItems = bsList[k:k+K]
			vv.Sleep(pause)
			if pMap.SelectedItems.Count == 0: return
		vv.Sleep(1000)

