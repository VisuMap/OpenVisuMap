# ShowSelectedProteins.pyn
# Used by Atlas:  marks the atlas items when some protein ids have been selected in other views.
def ShowSelectedProteins():
	atlas = vv.EventSource.Argument
	if pp.Name == 'Atlas' or atlas == None:
		return
	setS=set(vv.SelectedItems)
	atlas.SetSelectedItems([e for e in atlas.Items if e.Name in setS])
	
vv.EventManager.OnItemsSelected('@ShowSelectedProteins()', None, pp)